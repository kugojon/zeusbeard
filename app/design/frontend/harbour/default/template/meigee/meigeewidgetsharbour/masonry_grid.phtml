		if(navigator.userAgent.indexOf('IE 8')==-1){
			jQuery(window).load(function() {
				function grid3Isotope() {
					var $container = jQuery('.grid-2 .products-grid');
					if(!jQuery('body').hasClass('rtl')){
						$container.isotope({
							itemSelector: '.item',
							resizable: true,
							layoutMode : 'masonry',
							 masonry: {
								columnWidth: 1
							} 
						});
					} else {
						$container.isotope({
							itemSelector: '.item',
							resizable: true,
							transformsEnabled: false,
							layoutMode : 'masonry',
							 masonry: {
								columnWidth: 1
							} 
						});
					}
				}
				grid3Isotope();
			});
		}
	</script>
