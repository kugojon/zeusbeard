<?php /** @var $this Mage_Checkout_Block_Onepage_Shipping_Method_Available */ ?>
<?php $_shippingRateGroups = $this->getShippingRates(); ?>
<?php if (!$_shippingRateGroups): ?>
    <p><?php echo $this->__('Sorry, no quotes are available for this order at this time.') ?></p>
<?php else: ?>
    <dl class="sp-methods">
    <?php $shippingCodePrice = array(); ?>
    <?php $_sole = count($_shippingRateGroups) == 1; foreach ($_shippingRateGroups as $code => $_rates): ?>
        <dt><?php echo $this->escapeHtml($this->getCarrierName($code)) ?></dt>
        <dd>
            <ul>
            <?php 
            function orderBy($data, $field)
              {
                $code = "return strnatcmp(\$a['$field'], \$b['$field']);";
                usort($data, create_function('$a,$b', $code));
                return $data;
              }

              $_rates = orderBy($_rates, 'method_description');


            ?>
            <?php $_sole = $_sole && count($_rates) == 1; foreach ($_rates as $_rate): 
            // var_dump($_rate->getData());
                $method_title = $_rate->getMethodTitle();
                if(strpos($_rate->getMethodTitle(), '--')){
                    $method_titleArr = explode('--', $_rate->getMethodTitle());
                    $method_title = $method_titleArr[1];
                }


             ?>

                <?php $shippingAccount = $this->escapeHtml($method_title); ?>
                <?php $shippingCodePrice[] = "'".$_rate->getCode()."':".(float)$_rate->getPrice(); ?>
                <li>
                   <?php if ($_rate->getErrorMessage()): ?>
                    <ul class="messages"><li class="error-msg"><ul><li><?php echo $this->escapeHtml($_rate->getErrorMessage()) ?></li></ul></li></ul>
                   <?php else: ?>
                        <?php if ($_sole) : ?>
                        <span class="no-display"><input name="shipping_method" type="radio" value="<?php echo $_rate->getCode() ?>" id="s_method_<?php echo $_rate->getCode() ?>" checked="checked" /></span>
                        <?php else: ?>
                        <input name="shipping_method" type="radio" value="<?php echo $_rate->getCode() ?>" id="s_method_<?php echo $_rate->getCode() ?>"<?php if($_rate->getCode()===$this->getAddressShippingMethod()) echo ' checked="checked"' ?> class="radio <?php if($shippingAccount == 'Use your own shipping account') {echo "shipping-account";} ?>"/>

                        <?php if ($_rate->getCode() === $this->getAddressShippingMethod()): ?>
                        <script type="text/javascript">
                            //<![CDATA[
                                lastPrice = <?php echo (float)$_rate->getPrice(); ?>;
                            //]]>
                        </script>
                        <?php endif; ?>

                        <?php endif; ?>
                        <label for="s_method_<?php echo $_rate->getCode() ?>"><?php echo $this->escapeHtml($method_title) ?>
                        <?php $_excl = $this->getShippingPrice($_rate->getPrice(), $this->helper('tax')->displayShippingPriceIncludingTax()); ?>
                        <?php $_incl = $this->getShippingPrice($_rate->getPrice(), true); ?>
                        <?php echo $_excl; ?>
                        <?php if ($this->helper('tax')->displayShippingBothPrices() && $_incl != $_excl): ?>
                            (<?php echo $this->__('Incl. Tax'); ?> <?php echo $_incl; ?>)
                        <?php endif; ?>
                        </label>
                   <?php endif ?>
                </li>
            <?php endforeach; ?>
            </ul>
            <div class="bss-shipping-option" style="display:none;">
                <form action="">
                    <div class="col-shipping-carrier" >
                        <label for="shipping-carrier">Shipping Carrier</label>
                        <input type="text" name="shipping_arrival_carrier" class="required-entry bss-shippings input-text">
                    </div>
                    <div class="col-account-number">
                        <label for="account-number">Account Number</label>
                        <input type="text" name="shipping_arrival_account_number" class="required-entry bss-shippings input-text">
                    </div>
                </form>
            </div>
        </dd>
    <?php endforeach; ?>
    </dl>
<script type="text/javascript">
//<![CDATA[
    <?php if (!empty($shippingCodePrice)): ?>
        var shippingCodePrice = {<?php echo implode(',',$shippingCodePrice); ?>};
    <?php endif; ?>

    $$('input[type="radio"][name="shipping_method"]').each(function(el){
        Event.observe(el, 'click', function(){
            if (el.checked == true) {
                var getShippingCode = el.getValue();
                <?php if (!empty($shippingCodePrice)): ?>
                    var newPrice = shippingCodePrice[getShippingCode];
                    if (!lastPrice) {
                        lastPrice = newPrice;
                        quoteBaseGrandTotal += newPrice;
                    }
                    if (newPrice != lastPrice) {
                        quoteBaseGrandTotal += (newPrice-lastPrice);
                        lastPrice = newPrice;
                    }
                <?php endif; ?>
                checkQuoteBaseGrandTotal = quoteBaseGrandTotal;
                return false;
            }
       });
    });
//]]>
</script>
<script>
    jQuery(document).ready(function() {
        if(jQuery('.shipping-account').is(':checked')){
            jQuery('.bss-shipping-option').show();
        }
        jQuery("#checkout-shipping-method-load input:radio").on('change', function() {
            if (jQuery(this).hasClass("shipping-account")) {
              jQuery('.bss-shipping-option').show();
            } else {
              jQuery('.bss-shipping-option').hide();
              jQuery('.bss-shippings').val('');
            }
        });
    });
</script>
<?php endif; ?>
