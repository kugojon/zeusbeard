/**
 * Shoping cart header
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */
$meigee_harbour_appearance = MAGE::helper('ThemeOptionsHarbour')->getThemeOptionsHarbour('meigee_harbour_appearance');
$topCartPrice = $meigee_harbour_appearance['mycart']['price'];
$topCartIcon = $meigee_harbour_appearance['mycart']['icon'];
$topCartLabel = $meigee_harbour_appearance['mycart']['label'];
$topCartCount = $meigee_harbour_appearance['mycart']['count'];

$isDefault = $topCartPrice + $topCartLabel + $topCartCount;
if ($isDefault == 0) {
    $topCartPrice = 0;
    $topCartIcon = 1;
    $topCartLabel = 0;
    $topCartCount = 1;
}
$isOnHover = $meigee_harbour_appearance['mycart']['cartonhover'];
?>
<div class="top-cart">
    <?php $_cartQty = $this->getSummaryCount() ? $this->getSummaryCount() : 0 ?>
    <div class="top-cart-mobile block-title">
        <a class="cartHeader" href="<?php echo Mage::getBaseUrl().'checkout/cart'; ?>">
            <span class="title-cart">
                <span class="top-cart-icon">
                    <i class="fa fa-shopping-cart"></i>
                    <?php
                    if ($topCartCount) {
                        echo '<span class="cart-qty">' . $_cartQty . '</span>';
                    }
                    ?>
                </span>
            </span>
        </a>
    </div>
    <div class="block-title<?php
    if (!$_cartQty) {
        echo (' no-items');
    }
    ?>">
        <a class="cartHeader" href="javascript:void(0);">
            <span class="title-cart">
                <?php
                if ($_cartQty == 0) {
                    $_cartQty = '0';
                }
                if ($topCartIcon) {
                    echo '<span class="top-cart-icon">' . MAGE::helper('ThemeOptionsHarbour')->getIcon('headercart') . '</span>';
                }
                if ($topCartLabel) {
                    echo '<span class="top-cart-label">' . $this->__('Cart') . '</span>';
                }
                if ($topCartCount) {
                    echo '<span class="cart-qty">' . $_cartQty . '</span>';
                }
                if ($topCartPrice) {
                    echo '<span class="subtotal">' . Mage::helper('checkout')->formatPrice($this->getSubtotal()) . '</span>';
                }
                ?>
            </span>
        </a>
    </div>
    <div class="block-content topCartContent" style="display:none;">
        <div class="inner-wrapper"><?php // extra div to smooth slideUp and slideDown       ?>
            <?php $_items = $this->getRecentItems() ?>
            <?php if (count($_items)): ?>
                <ol class="mini-cart mini-products-list">
                    <?php foreach ($_items as $_item): ?>
                        <?php echo $this->getItemHtml($_item) ?>
                    <?php endforeach; ?>
                </ol>
            <?php else: ?>
                <p class="cart-empty">
                    <?php echo MAGE::helper('ThemeOptionsHarbour')->getIcon('headercart'); ?>
                    <span><?php echo $this->__('You have no items in your shopping cart.') ?></span>
                    <span class="small-label"><?php echo $this->__('Add some to cart or') ?> <a href="<?php echo Mage::helper('customer')->getLoginUrl(); ?>" class="link-login"><?php echo $this->__('login') ?></a></span>
                </p>
            <?php endif ?>
            <?php if ($_cartQty && $this->isPossibleOnepageCheckout()): ?>
                <div class="actions">
                    <a href="<?php echo $this->getUrl('checkout/cart'); ?>"><span><?php echo $this->__('Go to Shopping Cart') ?></span></a> 
                    <p class="subtotal">
                        <span class="label"><?php echo $this->__('Cart Subtotal:') ?></span> <?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?><?php if ($_subtotalInclTax = $this->getSubtotalInclTax()): ?> / <?php echo Mage::helper('checkout')->formatPrice($_subtotalInclTax) ?> <?php echo Mage::helper('tax')->getIncExcText(true) ?><?php endif; ?>
                    </p>
                    <div class="clear"></div>
                    <button class="button" type="button" onclick="setLocation('<?php echo $this->getCheckoutUrl() ?>')"><span><span><?php echo $this->__('Checkout') ?></span></span></button>
                    <?php
                    // $gsx_enablehttps = trim(Mage::getStoreConfig("checkout/globalshopex/gsx_enablehttps"));
                    // $urlIFrame = Mage::getBaseUrl();
                    // if ($gsx_enablehttps) {
                    //     $urlIFrame = str_replace('http:', 'https:', Mage::getBaseUrl());
                    // }
                    $urlIFrame = Mage::getBaseUrl();
                    // $urlIFrame = $urlIFrame . "GSXInternationalCheckout/GSX";
                    $urlIFrame = $urlIFrame . "internationalcheckout";
                    ?> 
                    <button class="button" type="button" onclick="setLocation('<?php echo $urlIFrame ?>')"><span><span><?php echo $this->__('International Checkout') ?></span></span></button>
                    <?php echo $this->getChildHtml('extra_actions') ?>                               
                </div>
            <?php endif ?>
        </div>
    </div>
    <script type="text/javascript">
        /* Top Cart */
<?php if ($isOnHover): ?>
            topCart('hover');
<?php else: ?>
            topCart();
<?php endif; ?>
        jQuery('.mini-cart li:nth-child(2)').addClass('second');
        jQuery('.mini-cart li:nth-child(3)').addClass('last');
    </script>
</div>