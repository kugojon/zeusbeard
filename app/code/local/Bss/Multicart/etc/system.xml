<?xml version="1.0"?>
<config>
 <tabs>
  <bss translate="label" module="multicart">
    <label>Bss Extensions</label>
    <sort_order>0</sort_order>
  </bss>
</tabs>
<sections>
  <multicart  translate="label" module="multicart">                    
    <label>Multicart</label>
    <tab>bss</tab>
    <frontend_type>text</frontend_type>
    <sort_order>0</sort_order>
    <show_in_default>1</show_in_default>
    <show_in_website>1</show_in_website>
    <show_in_store>1</show_in_store>            
    <groups>
      <multicart_settings translate="label"> 
       <label>Settings</label>
       <frontend_type>text</frontend_type>
       <sort_order>0</sort_order>
       <show_in_default>1</show_in_default>
       <show_in_website>1</show_in_website>
       <show_in_store>1</show_in_store>
       <fields>
         <multicart_active translate="label">
          <label>Enable</label>
          <frontend_type>select</frontend_type>
          <source_model>adminhtml/system_config_source_yesno</source_model>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <comment>Enable / Disable Multicart</comment>
        </multicart_active>
        <category_id translate="label">
          <label>Category</label>
          <frontend_type>multiselect</frontend_type>
          <source_model>Bss_Multicart_Model_System_Config_Source_Category</source_model>
          <sort_order>40</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <can_be_empty>1</can_be_empty>
          <comment>Enable add muntiple product to cart for category</comment>
        </category_id>
         <sort_order_attribute translate="label">
          <label>Select Attribute Sortby</label>
          <frontend_type>select</frontend_type>
          <source_model>Bss_Multicart_Model_System_Config_Source_Attribute</source_model>
          <sort_order>50</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
        </sort_order_attribute>
         <sortby_type translate="label">
          <label>Select Sortby Type</label>
          <frontend_type>select</frontend_type>
          <source_model>Bss_Multicart_Model_System_Config_Source_Sortbytype</source_model>
          <sort_order>60</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
        </sortby_type>
      </fields>
    </multicart_settings>
  </groups>
</multicart>
</sections>
</config>
